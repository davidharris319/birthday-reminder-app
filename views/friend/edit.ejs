<%- include('../partials/header') %>

<main class="container">
  <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-info rounded shadow-sm">
    <div class="lh-100">
      <h5 class="mb-0 text-white lh-100">Update Friend Info</h5>
    </div>
  </div>
  <div class="my-3 p-3 bg-white rounded shadow-sm">
    <div class="container">
      <div class="mx-auto form-container">
        <form id="new-form" action="/friends/<%= friend._id %>?_method=PUT" method="POST">
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">First Name:</label>
            <div class="col-sm-6">
              <input class="form-control" type="text" name="firstName" value="<%= friend.firstName %>">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Last Name:</label>
            <div class="col-sm-6">
              <input class="form-control" type="text" name="lastName" value="<%= friend.lastName %>">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label update-profile-margin">Birthday</label>
            <input type="date" name="birthday" value="<%= friend.birthday %>">
          </div>
          <div class="btn-center">
            <button class="btn btn-info" id="center" type="submit">Update Friend Info</button>
          </div>
        </form> 
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
